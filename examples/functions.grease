# Function definition test
def greet(name):
    return "Hello, " + name + "!"

def add(a, b):
    return a + b

def factorial(n):
    if n <= 1:
        return 1
    else:
        return n * factorial(n - 1)

# Test functions
print(greet("World"))
print("5 + 3 = " + add(5, 3))
print("5! = " + factorial(5))